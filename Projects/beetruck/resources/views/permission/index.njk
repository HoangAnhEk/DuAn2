{% extends 'layouts.default' %}

{% block content %}

<section class="content-header">
	<h1>
		Quyền truy cập
	</h1>
	<ol class="breadcrumb">
		<li>
            {{ linkToAction('HomeController.index', 'Bảng điều khiển') }}
        </li>
		<li class="active">
            Quyền truy cập
        </li>
	</ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-9">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Các quyền truy cập</h3>
                </div>
                <div class="box-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th class="col-md-1">#</th>
                                <th class="col-md-3">Quyền</th>
                                <th>Mô tả</th>
                                <th class="col-md-3"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for permission in permissions %}
                            <tr>
                                <td>{{ permission.id }}.</td>
                                <td>{{ permission.name }}</td>
                                <td>
                                    {{ permission.description if permission.description else '...' }}
                                </td>
                                <td>{{ permission.permission }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}