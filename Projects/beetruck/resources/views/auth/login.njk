{% extends 'layouts.auth' %}

{% block content %}

<div class="login-box">
	<div class="login-logo">
		<a href="{{ 'HomeController.index' | action }}" title="Bee Truck"><b>Bee</b>Truck</a>
	</div>
	<div class="login-box-body">
		<p class="login-box-msg">Đăng nhập để tiếp tục</p>
		{{ form.open({ action: 'LoginController.login' }) }}
			{{ csrfField }}
			<div class="form-group has-feedback {{ 'has-error' if (_.find(old('errors'), { field: 'phone' })) else '' }}">
				{{ form.text('phone', old('phone'), { class: 'form-control', 'placeholder': 'Số điện thoại' }) }}
				<span class="glyphicon glyphicon-envelope form-control-feedback"></span>
				<span class="help-block">{{ _.find(old('errors'), { field: 'phone' }).message }}</span>
			</div>
			<div class="form-group has-feedback {{ 'has-error' if (_.find(old('errors'), { field: 'password' })) else '' }}">
				{{ form.password('password', null, { class: 'form-control', 'placeholder': 'Mật khẩu' }) }}
				<span class="glyphicon glyphicon-lock form-control-feedback"></span>
				<span class="help-block">{{ _.find(old('errors'), { field: 'password' }).message }}</span>
			</div>
			<div class="row">
				<div class="col-md-7">
					<div class="checkbox icheck visible-lg visible-md">
						<label>
							{{ form.checkbox('remember', 'on', old('remember')) }}
							Ghi nhớ tài khoản
						</label>
					</div>
				</div>
				<div class="col-md-5 col-xs-12 text-right">
					<p style="margin: 10px 0 12px 0">
						<a role="button">Quên mật khẩu?</a>
					</p>
				</div>
			</div>
			<hr style="margin-top: 10px" />
			{{ form.submit('Đăng Nhập', 'submit', { class: 'btn btn-primary btn-block btn-flat' }) }}
		{{ form.close() }}
	</div>
	<div class="text-center" style="padding: 10px 0">
		Thiết kế bởi <b>{{ TeamName }}</b>.
	</div>
</div>

{% endblock %}

{% block scripts %}
<script>
	$('.icheck input').iCheck({
		checkboxClass: 'icheckbox_square-blue',
		radioClass: 'iradio_square-blue',
		increaseArea: '20%'
	});
</script>
{% endblock %}
